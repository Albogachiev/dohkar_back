generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
}

enum UserRole {
  USER
  PREMIUM
  ADMIN
}

enum AuthProvider {
  LOCAL
  GOOGLE
  YANDEX
  VK
}

enum PropertyType {
  APARTMENT
  HOUSE
  LAND
  COMMERCIAL
}

enum PropertyStatus {
  ACTIVE
  PENDING
  SOLD
  ARCHIVED
}

enum Currency {
  RUB
  USD
}

enum Region {
  CHECHNYA
  INGUSHETIA
  OTHER
}

model User {
  id         String       @id @default(uuid())
  phone      String?       @unique
  email      String?       @unique
  passwordHash String?
  isPremium  Boolean      @default(false)
  role       UserRole     @default(USER)
  provider   AuthProvider @default(LOCAL)
  providerId String? // ID from OAuth provider
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  // Relations
  properties    Property[]
  favorites     Favorite[]
  refreshTokens RefreshToken[]

  @@index([provider, providerId])
  @@map("users")
}

model Property {
  id          String         @id @default(uuid())
  title       String
  price       Float
  currency    Currency       @default(RUB)
  location    String
  region      Region
  type        PropertyType
  rooms       Int?
  area        Float // in square meters
  description String         @db.Text
  images      String[] // array of image URLs
  features    String[] // array of features
  status      PropertyStatus @default(ACTIVE)
  views       Int            @default(0)
  userId      String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  favorites Favorite[]

  @@index([userId])
  @@index([type])
  @@index([region])
  @@index([status])
  @@index([createdAt])
  @@map("properties")
}

model Favorite {
  id         String   @id @default(uuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([userId, propertyId])
  @@index([userId])
  @@index([propertyId])
  @@map("favorites")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model PhoneCode {
  id        String   @id @default(uuid())
  phone     String
  code      String
  expiresAt DateTime
  attempts  Int      @default(0)
  used      Boolean  @default(false)
  ip        String?   // с какого IP запросили код
  createdAt DateTime @default(now())

  @@index([phone])
  @@index([expiresAt])
}
